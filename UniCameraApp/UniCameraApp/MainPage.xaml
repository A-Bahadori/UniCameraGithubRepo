<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniCameraApp.MainPage">
    <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="University Camera" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Button x:Name="btnPickImg" Text="Pick Image" Clicked="BtnPickImg_OnClicked"></Button>
            <Button x:Name="btnCam" Text="Take Image" Clicked="BtnCam_OnClicked"></Button>
            <Image x:Name="resultImage" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Image>

        </StackLayout>

    </ScrollView>
</ContentPage>
